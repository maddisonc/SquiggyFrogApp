<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fact3Screen"
    android:background="#FAE5FF">

    <TextView
        android:id="@+id/Fact3Title"
        android:fontFamily="@font/dynapuff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:text="Fact #3:" />

    <ImageView
        android:id="@+id/squiggy_mafia_img"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        app:srcCompat="@drawable/squiggy_mafia" />

    <TextView
        android:id="@+id/fact3Text"
        android:fontFamily="@font/dynapuff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:text="Sometimes, Squiggy holds worms like a cigar.  He is a mafia boss with tiny hands.  (He looks scary in this picture and he is proud of it.)" />

    <Button
        android:id="@+id/backMainBtn"
        android:fontFamily="@font/dynapuff"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Back to Main"
        android:background="#CCB9F8"
        android:textSize="20sp" />
</LinearLayout>